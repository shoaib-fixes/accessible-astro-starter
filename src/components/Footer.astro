---
import CallToAction from './CallToAction.astro'
import ExternalLink from './ExternalLink.astro'
import Logo from './Logo.astro'

/**
 * Footer Component
 *
 * @description A component that displays the footer of the website
 */
const currentYear = new Date().getFullYear()
---

<footer>
  <CallToAction />
  <section class="py-20">
    <h2 class="sr-only">Footer</h2>
    <div class="container grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-4">
      <div class="flex flex-col gap-4">
        <h3 class="text-2xl font-bold">Product</h3>
        <ul class="flex flex-col gap-2">
          <li><a href="/">Home</a></li>
          <li><a href="/features">Features</a></li>
          <li><a href="/pricing">Pricing</a></li>
          <li><a href="/demo">Request Demo</a></li>
        </ul>
      </div>
      <div class="flex flex-col gap-4">
        <h3 class="text-2xl font-bold">Resources</h3>
        <ul class="flex flex-col gap-2">
          <li><a href="/accessibility-statement">Accessibility Statement</a></li>
          <li><a href="/gdpr-compliance">GDPR Compliance</a></li>
          <li><a href="/security">Security</a></li>
          <li><a href="/api-docs">API Documentation</a></li>
          <li><a href="/support">Support Center</a></li>
        </ul>
      </div>
      <div class="flex flex-col gap-4">
        <h3 class="text-2xl font-bold">Company</h3>
        <ul class="flex flex-col gap-2">
          <li><a href="/about">About Us</a></li>
          <li><a href="/careers">Careers</a></li>
          <li><a href="/blog">Blog</a></li>
          <li><a href="/contact">Contact</a></li>
        </ul>
      </div>
      <div class="flex flex-col gap-4">
        <Logo loading="lazy" />
        <p class="leading-[1.75]">
          Contact us at <a href="mailto:info@employwizard.com">info@employwizard.com</a> for support or to schedule a demo.
          Employ Wizard - Transforming recruitment with AI.
        </p>
      </div>
    </div>
  </section>
  <section class="py-8">
    <div class="container flex flex-col gap-4 md:flex-row md:justify-between">
      <p>
        &copy; {currentYear} Employ Wizard. All rights reserved.
      </p>
      <p>
        Built with ❤️ for HR professionals worldwide. <a href="mailto:info@employwizard.com">Contact us</a> to learn more.
      </p>
    </div>
  </section>
</footer>

<style>
  section {
    border-top: 1px solid var(--border-color-subtle);
  }
</style>
